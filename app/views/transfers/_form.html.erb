<%= form_for @transfer, :html => {:class => 'form-horizontal'} do |f| %>
  <% if @transfer.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <ul>
        <% @transfer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-sm-6"><%= collection_select(:transfers, :account_id, Account.all, :id, :name, {}, {:class => 'form-control'}) %> </div><div class="col-sm-6"><%= collection_select(:transfers, :transfers, Account.all, :id, :name, {}, {:class => 'form-control'}) %></div>
  </div>
  <div class="form-group">
    <%= f.label 'Сумма', :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :value, :class => 'form-control', :placeholder => 'Сумма' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit 'Сохранить', :class => 'btn btn-primary' %>
  </div>
<% end %>