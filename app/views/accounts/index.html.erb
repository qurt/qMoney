<div class="col-md-12">
  <% if notice %>
    <div class="alert alert-success alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= notice %>
    </div>
  <% end %>
  <%= link_to 'Новый кошелек', new_account_path, class: 'btn btn-success btn-sm' %>
  <%= link_to 'Новое накопление', moneybox_new_account_path, class: 'btn btn-success btn-sm' %>
  <table class="table table-striped table-condensed">
    <tr>
      <th>Название</th>
      <th>Сумма</th>
      <th></th>
    </tr>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= account.value %></td>
        <td><%= link_to 'Редактировать', edit_account_path(account) %> / <%= link_to 'Удалить', account, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </table>
</div>
