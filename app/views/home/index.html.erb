<div class="col-md-3">
  <div class="panel panel-primary">
    <div class="panel-heading">Текущий остаток</div>

    <div class="list-group">
      <div class="list-group-item list-group-item-info"><span class="badge"><%= @accounts.where('value > 0').sum('value') %></span>Всего</div>
      <div class="list-group-item list-group-item-danger"><span class="badge"><%= @accounts_pay %></span>Всего портачено</div>
      <% @accounts.each do |item| %>
        <div class="list-group-item ">
          <span class="badge"><%= item.value %></span>
          <%= item.name %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="panel panel-primary">
    <div class="panel-heading">Долги</div>

    <div class="list-group">
      <% @credits.each do |item| %>
        <div class="list-group-item <%= 'list-group-item-' + (item.value > 0 ? 'success' : 'danger') %>"><%= item.name %><span class="badge"><%= item.value %></span></div>
      <% end %>
    </div>
  </div>
</div>
<div class="col-md-9">
  <% if notice %>
    <div class="alert alert-success alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= notice %>
    </div>
  <% end %>
  <div class="panel panel-primary">
    <div class="panel-heading">Журнал операций <div class="pull-right panel-title"><%= link_to 'Посмотреть все', statistic_operations_path, :class => 'small' %></div></div>
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Описание</th>
        <th>Сумма</th>
        <th>Дата</th>
      </tr>
      </thead>
      <tbody>
      <% @operations_history.each do |item| %>
        <%
        case item.type
          when 0
            style = 'danger'
          when 1
            style = 'success'
          when 2
            style = 'warning'
          else
            style = 'notice'
        end
        %>
      <tr class="<%= style %>">
        <td>
          <% if item.type != 2 %>
            <%= link_to item.description, edit_operation_path(item) %>
          <% else %>
            <%= link_to item.description, edit_transfer_path(item) %>
          <% end %>
        </td>
        <td><%= item.value.to_f %></td>
        <td><%= item.operation_date.strftime('%d.%m.%Y') %></td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= high_chart('category_chart', @chart[:categories]) %>
    </div>
  </div>
</div>