<div class="col-md-12">
    <% if notice %>
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <%= notice %>
        </div>
    <% end %>

    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Описание</th>
                <th>Сумма</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @repeat_operations.each do |item| %>
                <tr>
                    <td><%= item.description %></td>
                    <td><%= item.value %></td>
                    <td>
                        <%= link_to repeat_operations_edit_path(item) do %>
                            <span class="glyphicon glyphicon-edit"></span>
                        <% end %>
                        <%= link_to repeat_operations_delete_path(item), method: :delete, data: { confirm: 'Вы уверены?' } do %>
                            <span class="glyphicon glyphicon-trash"></span>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
