<%= form_for(@operation, :html => {:class => 'form-horizontal'}) do |f| %>
    <% if @operation.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
            <ul>
                <% @operation.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <%= f.label :type, 'Тип', :class => 'col-sm-2 control-label' %>
                <div class="col-sm-10">
                    <%# select(:operation, :type, [['Расход', 0], ['Доход', 1], ['Перемещение', 2]], {}, {:class => 'form-control', :disabled => !@operation.id.nil?}) %>
                    <%= select2('operation_type', 'operation[type]', [['Расход', 0], ['Доход', 1], ['Перемещение', 2]], nil, {:class => 'form-control'}) %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :account_id, 'Кошелек', :class => 'col-sm-2 control-label' %>
                <div class="col-sm-10">
                    <%= collection_select(:operation, :account_id, Account.includes(:moneybox).where(:moneyboxes => {:account_id => nil}), :id, :name,{}, {:class => 'form-control'}) %>
                    <select name="operation[account_id_from]" id="operation-account-from" class="form-control" style="display: none;">
                        <%= grouped_options_for_select(select_options, @operation.account_id) %>
                    </select>
                </div>
            </div>

            <div class="form-group" id="transfer_field" style="display: none;">
                <%= label_tag "tranfer_label", "Переместить в:", :class => 'col-sm-2 control-label' %>
                <div class="col-sm-10">
                    <select name="operation[transfer]" id="operation-transfer" class="form-control">
                        <%= grouped_options_for_select(select_options, @operation.transfer) %>
                    </select>
                    <%# collection_select(:operation, :transfer, Account.all, :id, :name, {:class => 'form-control'}) %>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <%= f.label :category_id, 'Категория', :class => 'col-sm-2 control-label' %>
                <div class="col-sm-10">

                    <%= select_tag "operation[category_id]", options_from_collection_for_select(Category.where('parent_id is null'), 'id', 'title', @operation.category_id), {:class => 'form-control'} %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :value, 'Сумма', :class => 'col-sm-2 control-label' %>
                <div class="col-sm-10">
                    <%= f.text_field :value, :class => 'form-control', :placeholder => 'Сумма', :step => 'any' %>
                </div>
            </div>
            <div class="form-group">
                <%= f.label :description, 'Описание', :class => 'col-sm-2 control-label' %>
                <div class="col-sm-10">
                    <%= f.text_field :description, :class => 'form-control', :placeholder => 'Описание' %>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <%= label_tag 'custom_date_label', 'Дата', :class => 'col-sm-1 control-label' %>
                <div class="col-sm-11">
                    <%
                         #TODO Вынести в хелпер
                         date = Time.zone.today
                         unless @operation.operation_date.nil?
                             date = @operation.operation_date.strftime('%Y-%m-%d')
                         end
                    %>
                    <%= text_field_tag('custom_date', date, :class => 'form-control', 'data-behaviour' => 'datepicker') %>
                </div>
            </div>

            <div class="col-md-12 form-group">
                <%= f.submit 'Сохранить', :class => 'btn btn-primary', data: {disable_with: "Сохраняем..."} %>
                <div class="btn btn-primary btn-link" id="save_refresh">Сохранить и продолжить</div>
                <% unless @operation.id.nil? %>
                        <%= link_to 'Удалить', @operation, method: :delete, data: {confirm: 'Вы уверены?', disable_with: "Удаляем..."}, :class => 'btn btn-danger' %>
                <% end %>
            </div>
        </div>
    </div>

    <%= hidden_field_tag 'old_data[value]', @operation.value %>
    <%= hidden_field_tag 'old_data[account_id]', @operation.account_id %>
    <%= hidden_field_tag 'old_data[transfer]', @operation.transfer %>
<% end %>
