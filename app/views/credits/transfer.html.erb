<%= form_tag('/credits/transfer_process', class: 'form-horizontal') do %>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= label_tag(:credit, 'Долг', :class => 'col-md-3 control-label') %>
        <div class="col-md-9">
          <%= collection_select(:data, :credit_id, Credit.all, :id, :name, {}, {class: 'form-control'}) %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag :account, 'Кошелек', :class => 'col-md-3 control-label' %>
        <div class="col-md-9">
          <%= collection_select(:data, :account_id, Account.all, :id, :name, {}, {:class => 'form-control'}) %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-9 col-md-offset-3">
          <%= select_tag('data[type]', options_for_select([['Забрать долг/Взять в долг', 0], ['Дать в долг/Отдать долг', 1]]), :class => 'form-control') %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag :value, 'Сумма', class: 'col-md-3 control-label' %>
        <div class="col-md-9">
          <%= text_field_tag 'data[value]', '0', class: 'form-control' %>
        </div>
      </div>
      <div class="well">
        <button class="btn btn-success">Сохранить</button>
      </div>
    </div>
  </div>
<% end %>