<%= form_tag('/transfer_process', class: 'form-horizontal') do %>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= label_tag(:credit, 'Долг', :class => 'col-md-3 control-label') %>
        <div class="col-md-9">
          <%= text_field_tag(:credit, params[:credit], :class => 'form-control') %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag :account, 'Кошелек', :class => 'col-md-3 control-label' %>
        <div class="col-md-9">
          <%= text_field_tag(:account, params[:account], :class => 'form-control') %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-9 col-md-offset-3">
          <%= select_tag(params[:type], options_for_select([['Взять', 0], ['Дать', 1]]), :class => 'form-control') %>
        </div>
      </div>
      <div class="form-group">
        <button class="btn btn-success">Сохранить</button>
      </div>
    </div>
  </div>
<% end %>