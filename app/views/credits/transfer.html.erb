<%= form_tag('/credits/transfer_process', class: 'form-horizontal') do %>
    <div class="col-md-6">
        <div class="form-group">
            <%= label_tag(:credit, 'Долг', :class => 'col-md-3 control-label') %>
            <div class="col-md-9">
                <%= select2_collection('data', 'credit_id', Credit.all, 'id', 'name', nil, {class: 'form-control'}) %>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <%= label_tag :account, 'Кошелек', :class => 'col-md-3 control-label' %>
            <div class="col-md-9">
                <%= select2_collection('data', 'account_id', Account.all, :id, :name, nil, {:class => 'form-control'}) %>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <div class="col-md-9 col-md-offset-3">
                <%= select2(:data, :type, [['Забрать долг/Взять в долг', 0], ['Дать в долг/Отдать долг', 1]], nil, {:class => 'form-control'}) %>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <%= label_tag :value, 'Сумма', class: 'col-md-3 control-label' %>
            <div class="col-md-9">
                <%= text_field_tag 'data[value]', '0', class: 'form-control' %>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="well">
            <button class="btn btn-success">Сохранить</button>
        </div>
    </div>
<% end %>
