<div class="col-md-12">
  <% if notice %>
    <div class="alert alert-success alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= notice %>
    </div>
  <% end %>
  <%= link_to 'Новое накопление', new_moneybox_path, class: 'btn btn-success btn-sm' %>
  <% if @moneyboxes.length > 0 %>
    <table class="table table-striped table-condensed">
      <tr>
        <th>Название</th>
        <th>Накоплено</th>
        <th>Начислено процентов</th>
        <th>Надо накопить</th>
        <th colspan="2"></th>
      </tr>
      <% @moneyboxes.each do |moneybox| %>
        <tr>
          <td><%= moneybox.name %></td>
          <td><%= moneybox.current %></td>
          <td><%= moneybox.percentage %></td>
          <td><%= moneybox.summary %></td>
          <td><%= link_to 'Редактировать', edit_moneybox_path(moneybox) %></td>
          <td><%= link_to 'Удалить', moneybox, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <p class="well">У вас не создано ни одного накопления. <%= link_to 'Задайте', new_moneybox_path %> свою первую цель!</p>
  <% end %>
</div>
