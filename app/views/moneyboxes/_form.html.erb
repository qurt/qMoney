<%= form_for @moneybox, :html => {:class => 'form-horizontal'} do |f| %>
  <% if @moneybox.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <ul>
        <% @moneybox.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, 'Название', :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => 'form-control', :placeholder => 'Название' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :value, 'Нужно накопить', :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :summary, :class => 'form-control', :placeholder => 'Цель', :step => 'any' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :value, 'Накопленная сумма', :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :current, :class => 'form-control', :placeholder => 'Сумма', :step => 'any' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :value, 'Начисленные проценты', :class => 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :percentage, :class => 'form-control', :placeholder => 'Проценты', :step => 'any' %>
    </div>
  </div>
  <div class="action">
    <%= f.submit 'Сохранить', :class => 'btn btn-primary', data: {disable_with: "Сохраняем..."} %>
  </div>
<% end %>
