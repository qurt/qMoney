<p id="notice"><%= notice %></p>

<h1>Список тегов</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Название</th>
      <th>Количество операций с тегом</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.title %></td>
        <td><%= tag.operations.count() %></td>
        <!-- <td><%= link_to 'Show', tag %></td> -->
        <td><%= link_to 'Редактировать', edit_tag_path(tag) %></td>
        <td><%= link_to 'Удалить', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

