<a href="/category/new" class="btn btn-success btn-sm">Добавить категорию</a>
<table class="table table-striped table-condensed">
  <tr>
    <th>Название</th>
    <th></th>
  </tr>
  <% @category.each do |item| %>
  <tr>
    <td><%= item.title %></td>
    <td><a href="/category/<%= item.id %>/edit">Изменить</a> / <a href="/category/<%= item.id %>/destroy">Удалить</a></td>
  </tr>
  <% end %>
</table>
