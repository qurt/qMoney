<div class="row">
    <form method="get">
        <div class="col-md-4">
            <div class="input-daterange input-group" id="datepicker-range">
                <input class="form-control" data-behaviour="datepicker_range" name="date_s" type="text" value="<%= @filter[:date_s].strftime('%d.%m.%Y') %>"/>
                <span class="input-group-addon">-</span>
                <input class="form-control" data-behaviour="datepicker_range" name="date_e" type="text" value="<%= @filter[:date_e].strftime('%d.%m.%Y') %>"/>
            </div>
        </div>
        <div class="col-md-3">
            <%= select_tag 'a', options_from_collection_for_select(@filter[:accounts], 'id', 'name', @filter[:active_a]), :prompt => 'Все кошельки', :class => 'form-control' %>
        </div>
        <div class="col-md-3">
            <%= select_tag 'c', options_from_collection_for_select(@filter[:categories], 'id', 'title', @filter[:active_c]), :prompt => 'Все категории', :class => 'form-control' %>
        </div>
        <div class="col-md-2">
            <button class="btn btn-primary">Сформировать</button>
        </div>
    </form>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Описание</th>
                    <th>Сумма</th>
                </tr>
            </thead>
            <tbody>
                <% prev_date = nil %>
                <% @operations.each do |item| %>
                <%
           case item.type
             when 0
               style = 'danger'
             when 1
               style = 'success'
             when 2
               style = 'warning'
             else
               style = 'notice'
           end
        %>

                <% if item.operation_date.strftime('%d.%m.%Y') != prev_date or prev_date.nil? %>
                <tr class="notice">
                    <td><%= item.operation_date.strftime('%d.%m.%Y') %></td>
                    <td></td>
                </tr>
                <%
           prev_date = item.operation_date.strftime('%d.%m.%Y')
           end
        %>
                <%= history_row_render(item) %>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
