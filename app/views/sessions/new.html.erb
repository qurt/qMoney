<%= form_tag('', class: 'form-horizontal') do %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 well">
      <legend>Необходима авторизация</legend>
      <div class="form-group">
        <%= label_tag :name, 'Имя пользователя', :class => 'col-sm-4 control-label' %>
        <div class="col-md-8">
          <%= text_field_tag :name, params[:name], :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag :password, 'Пароль', :class => 'col-sm-4 control-label' %>
        <div class="col-md-8">
          <%= password_field_tag :password, params[:password], :class => 'form-control' %>
        </div>
      </div>
      <%= submit_tag 'Войти', :class => 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>