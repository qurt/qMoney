<div class="col-md-12">
    <a href="/categories/new" class="btn btn-success btn-sm">Добавить категорию</a>
    <table class="table table-striped table-condensed">
      <tr>
        <th>Название</th>
        <th></th>
      </tr>
      <% @category.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= link_to 'Редактировать', edit_account_path(item) %> / <%= link_to 'Удалить', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </table>
</div>