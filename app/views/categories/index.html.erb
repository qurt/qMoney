<div class="col-md-12">
  <% if notice %>
  <div class="alert alert-success alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <%= notice %>
  </div>
  <% end %>
  <a href="/categories/new" class="btn btn-success btn-sm">Добавить категорию</a>
  <table class="table table-condensed tree">
    <% @category.each do |item| %>
        <tr class="treegrid-<%= item.id %> <%= item.parent_id > 0 ? 'treegrid-parent-' + item.parent_id.to_s : '' %>">
          <td><%= item.title %></td>
          <td><%= link_to 'Редактировать', edit_category_path(item) %> / <%= link_to 'Добавить подкатегорию', add_subcategory_path(item) %> / <%= link_to 'Удалить', item, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        </tr>
    <% end %>
  </table>
</div>
